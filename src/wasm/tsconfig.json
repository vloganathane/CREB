{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES2020", "WebWorker", "DOM"],
    "types": ["webassembly-js-api"]
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
